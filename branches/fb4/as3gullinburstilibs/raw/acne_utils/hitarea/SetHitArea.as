package utils.hitarea {	import flash.display.Shape;	import flash.display.Sprite;	/**	 * @author pettercech	 */	public class SetHitArea extends Sprite {				public function SetHitArea(x:int, y:int, w:int, h:int){			var hitArea:Shape = new Shape();            hitArea.graphics.beginFill(0xFFFF32);            hitArea.graphics.drawRect(x, y, w, h);            hitArea.graphics.endFill();        	this.alpha = 0;          	this.addChild(hitArea);			this.buttonMode = true;		}		}}