		/**
		 * 
		 */
		// <*] class constructor [*>
		public function CompressionSpring(k:Number, l:Number) {
		//]~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~._
			super(k, l);
		}//]~*~~*~~*~~*~~*~~*~~*~~*~~·¯
		
		//]~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=~=[>
		//]~=~=~=~=~=~=~=~=~=[>
		
		
		public function applyForce(amt:Number):Number {
		//]~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~._
			return (len - (amt / rate));
		}//]~*~~*~~*~~*~~*~~*~~*~~*~~·¯
		
		public function lengthBy(amt:Number):Number {
		//]~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~._
			return (lengthTo(len - (len * Math.min(Math.max(amt, 0), 1))));
		}//]~*~~*~~*~~*~~*~~*~~*~~*~~·¯
		
		public function lengthTo(l:Number):Number {
		//]~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~._
			return (rate * (len - Math.min(l, len)));
		}//]~*~~*~~*~~*~~*~~*~~*~~*~~·¯
	}
