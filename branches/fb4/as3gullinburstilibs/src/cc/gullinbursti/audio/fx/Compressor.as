		public static function apply(wave:Array, thresh:Number, ratio:Number):Array {
		//]~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~~*~._	
			var fx_arr:Array = new Array();
			
			for (var i:int=0; i<wave.length; i++) {
				
